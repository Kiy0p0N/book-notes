<%- include('partials/header.ejs') %>

<main class="container">
    <div class="content__container">
        <h1>Book Notes</h1>

        <div class="form">
            <h2>Create a new account</h2>
            <p>It's quick and easy.</p>

            <hr>

            <!-- Input form -->
            <form action="/new-account" method="post">
                <input type="text" name="nickname" id="nickname" placeholder="Nickname" maxlength="50" required>

                <p style="color: red; font-size: 0.8rem;"><%= locals.error %></p>

                <input type="text" name="password" id="password" placeholder="Password"
                maxlength="16" required>

                <button type="submit" class="create-account">Create account</button>
            </form>
        </div>
    </div>
</main>

<%- include('partials/footer.ejs') %>